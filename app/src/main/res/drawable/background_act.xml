<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" android:state_activated="false">
        <shape>
            <solid android:color="@color/actBtn"></solid>
            <stroke android:width="2dp" android:color="@color/white"></stroke>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/actPressed"></solid>
            <stroke android:width="2dp" android:color="@color/actTxt"></stroke>
        </shape>
    </item>
    <item android:state_activated="true" android:state_pressed="false">
        <shape>
            <solid android:color="@color/hl"></solid>
            <stroke android:width="2dp" android:color="@color/actPressed"></stroke>
        </shape>
    </item>
</selector>