<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:id="@+id/smalls"
        style="@style/s"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_weight="1"
        android:text=""
        android:textSize="20sp" />

    <TextView
        android:id="@+id/s"
        style="@style/s"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text="" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="7">


        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/a"
                style="@style/numBtn"
                android:layout_column="0"
                android:text="1" />

            <Button
                android:id="@+id/b"
                style="@style/numBtn"
                android:layout_column="1"
                android:text="2" />

            <Button
                android:id="@+id/c"
                style="@style/numBtn"
                android:layout_column="2"
                android:text="3" />

            <Button
                android:id="@+id/plus"
                style="@style/actBtn"
                android:layout_column="3"
                android:text="+" />

        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/d"
                style="@style/numBtn"
                android:layout_column="0"
                android:text="4" />

            <Button
                android:id="@+id/e"
                style="@style/numBtn"
                android:layout_column="1"
                android:text="5" />

            <Button
                android:id="@+id/f"
                style="@style/numBtn"
                android:layout_column="2"
                android:text="6" />

            <Button
                android:id="@+id/minus"
                style="@style/actBtn"
                android:layout_column="3"
                android:text="-" />
        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/g"
                style="@style/numBtn"
                android:layout_column="0"
                android:text="7" />

            <Button
                android:id="@+id/h"
                style="@style/numBtn"
                android:layout_column="1"
                android:text="8" />

            <Button
                android:id="@+id/i"
                style="@style/numBtn"
                android:layout_column="2"
                android:text="9" />

            <Button
                android:id="@+id/cross"
                style="@style/actBtn"
                android:layout_column="3"
                android:text="X" />
        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/back"
                style="@style/actBtn"
                android:layout_column="0"
                android:text="DEL" />

            <Button
                android:id="@+id/z"
                style="@style/numBtn"
                android:layout_column="1"
                android:text="0" />

            <Button
                android:id="@+id/dot"
                style="@style/actBtn"
                android:layout_column="2"
                android:text="." />

            <Button
                android:id="@+id/slash"
                style="@style/actBtn"
                android:layout_column="3"
                android:text="/" />
        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/clr"
                style="@style/actBtn"
                android:text="CLR" />

            <Button
                android:id="@+id/equal"
                style="@style/actBtn"
                android:text="=" />
        </TableRow>


    </TableLayout>

</LinearLayout>